version: "3"
services:
  nginx:
    image: nginx:1.20
    container_name: DRUG_TRACK_Nginx
    restart: unless-stopped
    tty: true
    ports:
      - ${APP_PORT}:80
      - "443:443"
    volumes:
      - ./:/app
      - ./docker-conf/nginx/nginx.conf:/etc/nginx/conf.d/default.conf
    links:
      - php

  php:
    container_name: DRUG_TRACK_PHP
    build:
      context: ./docker-conf/php
    volumes:
      - ./:/app
      - ./docker-conf/php/www.conf:/usr/local/etc/php-fpm.d/www.conf:rw
      - ./docker-conf/php/php.ini:/usr/local/etc/php/php.ini:rw
    env_file:
      - "./.env"
    # needed in linux to solve storage log permission denied problem
    # user: "1000:1000"
    logging:
      driver: "json-file"
      options:
        max-size: "200k"
        max-file: "3"
    extra_hosts:
      - "host.docker.internal:172.17.0.1"
    working_dir: /app

  db: # for mysql; must use the service name in env as DB_HOST
    image: mysql:latest
    container_name: IP_MANAGE_MYSQL // later
    restart: unless-stopped
    tty: true
    environment:
      MYSQL_ROOT_PASSWORD: ${DB_PASSWORD} # it must be provided
      MYSQL_DATABASE: ${DB_DATABASE}
      SERVICE_TAGS: dev
      SERVICE_NAME: mysql
    ports:
      - 3306:${DB_PORT}
    volumes:
      - dbdata:/var/lib/mysql/
      - ./docker-conf/mysql/my.cnf:/etc/mysql/my.cnf

#Volumes
volumes:
  dbdata:
    driver: local
